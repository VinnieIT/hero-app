{{#partial "content"}}
    {{#if editSquad}}
         <h1>Edit this Squad!</h1>
         <form action="/squads/{{editSquad.id}}/update" method="post">
          <div class="form-group">
            <label for="squadName">Edit this squad's Name</label><br>
            <input id="squadName"  class="form-control"name="squadName" type="text" value="{{editSquad.squadName}}" required><br>
          </div>
          <div class="form-group">
            <label for="maxSize">Squad's maximum size</label><br>
            <input id="maxSize" class="form-control" name="maxSize" type="number" value="{{editSquad.maxSize}}" required><br>
          </div>
          <div class="form-group">
            <label for="cause">Cause</label><br>
            <input id="cause"  class="form-control" name="cause" type="text" value="{{editSquad.cause}}" required><br>
          </div>
    {{else}}
            <h1>Add a new Squad!</h1>

            <form action="/squads/newSquads" method="POST">
             <div class="form-group">
                <label for="squadName">Squad Name</label><br>
                <input id="squadName"  class="form-control"name="squadName" type="text" required><br>
             </div>
             <div class="form-group">
                <label for="maxSize">Squad maximum Size</label><br>
                <input id="maxSize"  class="form-control"name="maxSize" type="number" required><br>
             </div>
              <div class="form-group">
                <label for="cause">Squad's cause</label><br>
                <input id="cause"  class="form-control" name="cause" type="text" required><br><br>

              </div>
    {{/if}}
                <button type="submit" class="btn btn-default">Create Squad</button>
            </form>
{{/partial}}

{{> layout.hbs}}