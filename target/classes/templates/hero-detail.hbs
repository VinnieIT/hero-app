{{#partial "content"}}
    <h2 class = "text-center">Hero Details</h2>
      <div class="card col-md-5 card-placing">
          <h5 class="card-header">{{hero.name }}</h5>
          <div class="card-body">
            <h5 class="card-title">Hero Name : {{hero.name }}</h5>
            <h5 class="card-title">Hero Age : {{ hero.age }}</h5>
            <h5 class="card-title">Hero Power : {{hero.heroPower }}</h5>
            <h5 class="card-title">Hero Weakness : {{hero.weakness }}</h5>
          </div>
          <div class="card-body">
              <h5 class="card-title">Created At:</h5>
              <p class="card-text">Time Stamp: {{ hero.createdAt }}</p>
          </div>
          <div class="card-body">
                <h5 class="card-title">Squad Status:</h5>
                <h5>
                    {{#if hero.published }}
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>  Published
                    {{else}}
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Draft
                        <br>
                    {{/if}}

                     <button type="button" class="btn btn-outline-info"><a href="/squads/{{hero.id}}/update">Edit this Hero</a><br></button>
                     <button type="button" class="btn btn-outline-danger"><a href="/heroes/{{hero.id}}/delete">DELETE this Hero </a></button>
                </h5>
          </div>
        </div>
{{/partial}}

{{> layout.hbs}}
